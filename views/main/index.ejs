<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/main/index.css">
  <link rel="stylesheet" href="/common/global.css">
  <title>Music</title>
</head>
<body class="main--container">
  <header>
    <h1 class="main-title">
      <span>BroCloud</span> |
      <span class="main--club-highlight">
        <%= club.name %>
      </span>
    </h1>
  </header>
  <aside class="main--squad">
    <h3>Squad</h3>
    <ul class="main--squad-list">
      <% members.forEach(member => { %>
        <li id="<%= member._id %>" >
          <span>
            <%= member.firstName %>
            <q> <%= member.nickName %></q>
            <%= member.lastName %>
          </span>
          <span class="u--red-circle"></span>
        </li>
      <% }); %>
    </ul>
  </aside>
  <main>
    <form class="main--search">
      <input 
        name="searchQuery" 
        type="text" 
        placeholder="Search for a song"
      >
      <button class="btn--primary">Search</button>
    </form>
    <section>
      <h3>Search results</h3>
      <div class="main--search-results"></div>
    </section>
    <% if (currentlyPlaying.name) { %>
      <section class="main--video">
        <h3>Video</h3>
        <div class="u--center-content">
          <div id="player"></div>
        </div>
      </section>
      <section class="main--playlist">
        <ul>
          <h3>Currently playing</h3>
          <div class="main--playing">
            <li>
              <%= currentlyPlaying.name %>
              <div class="main--name-highlight">
                <%= currentlyPlaying.userFullName%>
              </div>
              <input 
                type="hidden" 
                id="videoId" 
                value="<%= currentlyPlaying.videoId %>"
              >
            </li>
          </div>
          <h3>Up Next</h3>
          <div class='main--up-next'>
            <% playlist.forEach(video => { %>
              <li>
                <%= video.name %>
                <div class="main--name-highlight">
                  <%= video.userFullName%>
                </div>
              </li>
            <% }); %>
          </div>
        </ul>
      </section>
    <% } %>
  </main>
  <aside class="main--history">
    <h3>Listening History</h3>
    <ul class="main--history-list">
      <% history.forEach(video => { %>
        <li id="<%= video.videoId %>">
          <button class="btn--result btn--history">
            <p>
              <%= video.name %>
            </p>
            <p>
              <%= video.userFullName %>
              <span class="main--timestamp">
                | <%= video.timestamp %>
              </span>
            </p>
          </button>
        </li>
      <% }); %>
    </ul>
  </aside>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="https://www.youtube.com/iframe_api"></script>
<script src="/main/index.js"></script>
</html>